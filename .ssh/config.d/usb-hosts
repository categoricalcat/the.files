# USB Network SSH Hosts
# These are common configurations for USB network connections

# USB Direct Connection (link-local)
Host usb-fufud
    HostName 169.254.*.* # Will need to replace with actual link-local IP
    User fufud
    Port 24212
    IdentityFile ~/.ssh/id_ed25519
    # Skip host key checking for USB connections (they may change)
    StrictHostKeyChecking no
    UserKnownHostsFile /dev/null
    # Faster timeout for USB connections
    ConnectTimeout 5

Host usb-workd
    HostName 169.254.*.* # Will need to replace with actual link-local IP
    User workd
    Port 24212
    IdentityFile ~/.ssh/id_ed25519
    StrictHostKeyChecking no
    UserKnownHostsFile /dev/null
    ConnectTimeout 5

# Alternative: USB tethering common subnets
Host usb-192-fufud
    HostName 192.168.42.* # Common Android USB tethering subnet
    User fufud
    Port 24212
    IdentityFile ~/.ssh/id_ed25519
    StrictHostKeyChecking no
    UserKnownHostsFile /dev/null
    ConnectTimeout 5

Host usb-192-workd
    HostName 192.168.42.* # Common Android USB tethering subnet
    User workd
    Port 24212
    IdentityFile ~/.ssh/id_ed25519
    StrictHostKeyChecking no
    UserKnownHostsFile /dev/null
    ConnectTimeout 5